<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SahkonSpotHinta.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SahkonSpotHinta"
    Shell.FlyoutBehavior="Flyout">


        <ShellContent
        Title="Spot hinta"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Sähkön hinta seuranta"
        ContentTemplate="{DataTemplate local:SahkonHintaSeuranta}"
        Route="SahkonHintaSeuranta" />

    <!--<TabBar>-->
        <ShellContent
         Title="Settings"
         ContentTemplate="{DataTemplate local:Settings}"
         Route="Settings"
            />

        <ShellContent
         Title="Camera"
         ContentTemplate="{DataTemplate local:Camera}"
         Route="Camera"
            />

    <!--</TabBar>-->

</Shell>

    
